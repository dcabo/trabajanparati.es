<div class="push-1 span-18"> 
	<h2>Patrimonios declarados - <%= @politician.name %></h2>
  <div class="push-1 span-16 last" id="graph-params">
      <p class="large">Blah blah</p>
      <p>Blah blah blah.</p>
      <p class="small">(Datos: Junta de Andalucía)</p>
  </div>

  <div class=" span-14 last">
    <table id="data-table" cellspacing="1" class="tablesorter">             
	    <thead>
	      <tr>
	        <th>Fecha</th>
	        <th>Motivo</th>
	        <th>Cargo</th>
	        <th>Organismo</th>
	        <th>Inmuebles</th>
	        <th>Cuentas</th>
	        <th>Fondos</th>
	        <th>Seguros</th>
	        <th>Vehículos</th>
	        <th>Préstamos</th>
	      </tr>
	    </thead>
	    <tbody>
      <% for statement in @politician.statements %>
			<tr>
				<td><%= link_to statement.event_date, [@politician, statement] %></td>
				<td><%= statement.event %></td>
				<td><%= statement.position %></td>
				<td><%= statement.entity %></td>
				<td><%= statement.total_property || '0' %> €</td>
				<td><%= statement.total_cash || '0' %> €</td>
				<td><%= statement.total_funds || '0' %> €</td>
				<td><%= statement.total_insurance || '0' %> €</td>
				<td><%= statement.total_vehicles || '0' %> €</td>
				<td><%= statement.total_liabilities || '0' %> €</td>
			</tr>
			<% end %>
	    </tbody>
	  </table>
  </div>
</div>			
